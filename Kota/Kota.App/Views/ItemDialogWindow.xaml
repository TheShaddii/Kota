<Window x:Class="Kota.App.ItemDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Item Details" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Item Form -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Item ID:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ItemIdTextBox" IsReadOnly="True" 
                                Background="#F5F5F5" Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DescriptionTextBox" Margin="0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="SKU:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="SkuTextBox" Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Qty On Hand:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="QtyOnHandTextBox" IsReadOnly="True" 
                                Background="#F5F5F5" Margin="0,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Min Qty:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="MinQtyTextBox" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Location Selection -->
                <GroupBox Header="Location" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Site:" VerticalAlignment="Center" Margin="0,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="SiteComboBox" 
                                 DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,5"
                                 SelectionChanged="SiteComboBox_SelectionChanged"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Building:" VerticalAlignment="Center" Margin="0,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="BuildingComboBox" 
                                 DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,5"
                                 SelectionChanged="BuildingComboBox_SelectionChanged"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Location:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LocationDisplayTextBlock" 
                                  Background="#F5F5F5" Padding="5" Margin="0,5"
                                  Text="Select Site and Building above"/>

                        <Button Grid.Row="3" Grid.Column="1" Content="Use: Main Warehouse > Building A" 
                               x:Name="UseDefaultLocationButton" Margin="0,10,0,0"
                               Click="UseDefaultLocation_Click" Background="#1976D2" Foreground="White"/>
                    </Grid>
                </GroupBox>

                <!-- Starting Inventory -->
                <GroupBox Header="Starting Inventory" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Starting Qty:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="StartingQtyTextBox" Text="0"/>
                    </Grid>
                </GroupBox>

                <!-- Notes -->
                <GroupBox Header="Notes" Margin="0,0,0,15">
                    <TextBox x:Name="NotesTextBox" Height="80" TextWrapping="Wrap" 
                            AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="10"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save Item" Width="100" Height="35" Margin="0,0,10,0" 
                    Background="#2E7D32" Foreground="White" Click="SaveItem_Click"/>
            <Button Content="Cancel" Width="80" Height="35" 
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>